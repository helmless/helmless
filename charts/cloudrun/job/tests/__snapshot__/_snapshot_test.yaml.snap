should render with full configuration:
  1: |
    template:
      metadata:
        annotations:
          run.googleapis.com/encryption-key: projects/my-project/locations/us-west1/keyRings/my-keyring/cryptoKeys/my-key
          run.googleapis.com/secrets: SECRET3:projects/other-project/secrets/other-secret
          run.googleapis.com/vpc-access-connector: projects/my-project/locations/us-central1/connectors/my-connector
          run.googleapis.com/vpc-access-egress: all-traffic
        name: full-job-full-v1
      spec:
        parallelism: PARALLELISM
        taskCount: TASK_COUNT
        template:
          spec:
            containers:
              - args:
                  - -c
                  - echo hello
                command:
                  - /bin/sh
                env:
                  - name: ENV_VAR1
                    value: value1
                  - name: ENV_VAR2
                    value: value2
                  - name: SECRET1
                    valueFrom:
                      secretKeyRef:
                        key: latest
                        name: my-secret
                  - name: SECRET2
                    valueFrom:
                      secretKeyRef:
                        key: "1"
                        name: another-secret
                  - name: SECRET3
                    valueFrom:
                      secretKeyRef:
                        key: latest
                        name: SECRET3
                image: gcr.io/project/image:v1.0.0
                name: main-container
                resources:
                  limits:
                    cpu: "4"
                    memory: 2Gi
                volumeMounts:
                  - mountPath: /cache
                    name: cache
                    readOnly: false
                  - mountPath: /etc/config
                    name: config
                    readOnly: false
                  - mountPath: /data
                    name: data
                    readOnly: true
                  - mountPath: /shared
                    name: shared
                    readOnly: false
            maxRetries: MAX_RETRIES
            serviceAccountName: my-service-account
            timeoutSeconds: TASK_TIMEOUT
            volumes:
              - emptyDir:
                  medium: Memory
                  sizeLimit: 512Mi
                name: cache
              - name: config
                secret:
                  items:
                    - key: latest
                      path: config.json
                    - key: "2"
                      path: config.v2.json
                  secretName: app-config
              - csi:
                  driver: gcsfuse.run.googleapis.com
                  volumeAttributes:
                    bucketName: my-data-bucket
                    mountOptions: dir-mode=0755,file-mode=0644,gid=1000,uid=1000
                name: data
              - name: shared
                nfs:
                  path: /exports/data
                  server: 10.0.0.1
