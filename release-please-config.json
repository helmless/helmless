{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "release-type": "helm",
    "packages": {
        "charts/cloudrun/service": {
            "release-type": "helm",
            "package-name": "google-cloudrun-service",
            "extra-files": [
                "Chart.yaml",
                "README.md",
                {
                    "type": "json",
                    "path": "values.schema.json",
                    "jsonpath": "$.version"
                }
            ]
        },
        "charts/cloudrun/job": {
            "release-type": "helm",
            "package-name": "google-cloudrun-job",
            "extra-files": [
                "Chart.yaml",
                "README.md",
                {
                    "type": "json",
                    "path": "values.schema.json",
                    "jsonpath": "$.version"
                }
            ]
        },
        "charts/cloudrun/common": {
            "release-type": "helm",
            "package-name": "google-cloudrun-common",
            "extra-files": [
                "Chart.yaml",
                "README.md",
                {
                    "type": "json",
                    "path": "common.schema.json",
                    "jsonpath": "$.version"
                }
            ]
        }
    },
    "bump-minor-pre-major": true,
    "include-component-in-tag": true,
    "include-v-in-tag": true,
    "separate-pull-requests": true,
    "group-pull-request-title-pattern": "chore: release ${component} ${version}"
}
